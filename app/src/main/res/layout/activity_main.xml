<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="50dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp">


                <ImageView
                    android:scaleType="fitXY"
                    android:padding="10dp"
                    android:id="@+id/image_1"
                    android:src="@drawable/bts_1"
                    android:layout_width="120dp"
                    android:layout_height="120dp" />

                <ImageView
                    android:scaleType="fitXY"
                    android:padding="10dp"
                    android:id="@+id/image_2"
                    android:src="@drawable/bts_2"
                    android:layout_width="120dp"
                    android:layout_height="120dp" />

                <ImageView
                    android:scaleType="fitXY"
                    android:padding="10dp"
                    android:id="@+id/image_3"
                    android:src="@drawable/bts_3"
                    android:layout_width="120dp"
                    android:layout_height="120dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp">

            <ImageView
                android:scaleType="fitXY"
                android:padding="10dp"
                android:id="@+id/image_4"
                android:src="@drawable/bts_4"
                android:layout_width="120dp"
                android:layout_height="120dp" />

            <ImageView
                android:scaleType="fitXY"
                android:padding="10dp"
                android:id="@+id/image_5"
                android:src="@drawable/bts_5"
                android:layout_width="120dp"
                android:layout_height="120dp" />

            <ImageView
                android:scaleType="fitXY"
                android:padding="10dp"
                android:id="@+id/image_6"
                android:src="@drawable/bts_6"
                android:layout_width="120dp"
                android:layout_height="120dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp">

            <ImageView
                android:scaleType="fitXY"
                android:padding="10dp"
                android:id="@+id/image_7"
                android:src="@drawable/bts_7"
                android:layout_width="120dp"
                android:layout_height="120dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>

